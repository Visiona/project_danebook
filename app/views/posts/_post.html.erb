<section class="post">
  <div class="post-body">
    <%= image_tag("user_silhouette_generic.gif") %>
    <div class="author-box">
      <%= link_to full_name(post), @user %>
      <time datetime="6/1/2013" pubdate>
        <%= formatted_date(post.created_at) %>
      </time>

    </div>
    <p class="comment-area">
      <%= post.body %>
    </p>
  </div>

  <div class="nav-footer">
    <%= link_to "Like", "", class: "link pull-left" %>
    <%= link_to "Comment", "", class: "comment pull-left" %>
    <%= link_to "Delete", user_post_path(user.id, post.id), method: 'delete', class: "delete pull-right", data: { confirm: 'Are you Sure?', remote: true } %>

    <% if nil %>
      <div class="liked-box">
        <p>
          <%= link_to "Hermione Granger", "", class: "liking" %>
          likes this
        </p>
      </div>
    <% else %>
      <div class="liked-box">
        <p>
          <div class="clearfix">
            <a href="#" class="like pull-left">
              Unike
            </a>
            <%= link_to "Delete", "", method: 'delete', class: "delete pull-right", data: { confirm: 'Are you Sure?', remote: true } %>
          </div>
          You and
          <%= link_to "Hermione Granger", "", class: "liking" %>
          and 3 other like this
        </p>
      </div>
    <% end %>

    <div class="post-body unfolded">
      <% if post.comments.any? %>
      <%= render partial: 'comment', :locals => {:post => post} %>
      <% end %>
      <%= render partial: 'comments/new_comment_form', :locals => {:commentable => post} %>
    </div>
  </div>
</section>
