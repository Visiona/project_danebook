<% post.comments.each do |comment| %>
<div class="post-body unfolded">
  <%= image_tag("user_silhouette_generic.gif") %>
  <div class="author-box-comment">
    <%= link_to "#{full_name(comment)}", user_path(comment.user.id) %>
    <time datetime="#{formatted_date(comment.created_at)}" pubdate>
      <%= formatted_date(comment.created_at) %>
    </time>
  </div>
  <div class="comment-area">
    <p>
      <%= comment.body %>
    </p>
    <div class="like-area">
      <div class="clearfix">
        <a href="#" class="like pull-left">
          Like
        </a>
        3 other people like this
        <%= link_to "Delete", "", method: 'delete', class: "delete pull-right", data: { confirm: 'Are you Sure?', remote: true } %>
      </div>
    </div>
  </div>
</div>
<% end %>
